<div class="container mt-5">
    {{ form_start(form, {'attr': {'class': 'form', 'novalidate': 'novalidate'}}) }}

    <div class="mb-3">
        {{ form_label(form.dateReservation) }}
        {{ form_widget(form.dateReservation, {'attr': {'class': 'form-control'}}) }}
        {{ form_errors(form.dateReservation) }}
    </div>

    <div class="mb-3">
        {{ form_label(form.statut) }}
        {% if is_new %}
            {{ form_widget(form.statut, {'attr': {'class': 'form-control', 'placeholder': 'Status', 'disabled': 'disabled'}}) }}
        {% else %}
            {{ form_widget(form.statut, {'attr': {'class': 'form-control', 'placeholder': 'Status'}}) }}
        {% endif %}
        {{ form_errors(form.statut) }}
    </div>

    <button type="submit" class="btn btn-primary">{{ button_label|default('Save') }}</button>

    {{ form_end(form) }}
</div>
