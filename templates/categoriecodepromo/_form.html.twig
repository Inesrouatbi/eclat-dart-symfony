</div>


<div class="row">
    <div class="col-md-6">

        {% if hasErrors == false %}
            <div class="input-group input-group-outline my-3">
                {{ form_label(form.quantite) }}
                {{ form_widget(form.quantite, {'attr': {'class': 'form-control'}}) }}
